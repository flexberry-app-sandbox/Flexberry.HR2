<h3 class="ui header">{{t "forms.i-i-s-h-r-сотрудник-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.iD
      class=(if (v-get validationModel "iD" "isInvalid") "error")
      label=(t "forms.i-i-s-h-r-сотрудник-e.iD-caption")
      data-test-i-i-s-h-r-сотрудник-e-iD=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "iD" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-h-r-сотрудник-e.дата_приема-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.дата_приема
      class=(if (v-get validationModel "дата_приема" "isInvalid") "error")
      data-test-i-i-s-h-r-сотрудник-e-дата_приема=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "дата_приема" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-h-r-сотрудник-e.отдел-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.отдел
      displayAttributeName="название"
      autocomplete=true
      relationName="отдел"
      projection="ОтделL"
      title=(t "forms.i-i-s-h-r-сотрудник-e.отдел-caption")
      readonly=readonly
      componentName="отделLookup"
      class=(if (v-get validationModel "отдел" "isInvalid") "error")
      data-test-i-i-s-h-r-сотрудник-e-отдел=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "отдел" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-h-r-сотрудник-e.должность-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.должность
      displayAttributeName="название"
      autocomplete=true
      relationName="должность"
      projection="ДолжностьL"
      title=(t "forms.i-i-s-h-r-сотрудник-e.должность-caption")
      readonly=readonly
      componentName="должностьLookup"
      class=(if (v-get validationModel "должность" "isInvalid") "error")
      data-test-i-i-s-h-r-сотрудник-e-должность=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "должность" "message")}}
  </div>
</form>
